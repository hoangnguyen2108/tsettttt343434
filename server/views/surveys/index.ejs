    <!-- MAIN CONTENT -->
    <div class="body_container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h3 class="list_title"><i class="glyphicon glyphicon-list-alt" aria-hidden="true"></i> Surveys List </h3>
          <br>
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-center">Survey Topic</th>
              <th class="text-center"></th>
            </tr>
            <!-- Template Row -->
            <% for (let count = 0; count < surveys.length; count++) { %>
            <tr>
              <td class="text-center"><%= surveys[count].topic %></td>
              <td class="text-center">
              <a href="/surveys/response/<%= surveys[count]._id %>" class="btn btn-primary">
              <i class="fa fa-pencil-square-o"></i> Response</a>
               </td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>

